{
  "name": "playwright-demo-1",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint",
    "format": "prettier --write .",
    "// --- LOCAL SCRIPTS ---": "",
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:ui": "npx playwright test --ui",
    "// --- LOCAL WEB SCRIPTS ---": "",
    "test:web:smoke": "npx playwright test --project=web-smoke-guest --project=web-smoke-member",
    "test:web:regression": "npx playwright test --project=web-regression-guest --project=web-regression-member",
    "// --- LOCAL MOBILE SCRIPTS ---": "",
    "test:mobile:smoke": "npx playwright test --project=mobile-smoke-guest --project=mobile-smoke-member",
    "test:mobile:regression": "npx playwright test --project=mobile-regression-guest --project=mobile-regression-member",
    "// --- LOCAL UTILITY SCRIPTS ---": "",
    "test:all:smoke": "npm run test:web:smoke && npm run test:mobile:smoke",
    "test:all:regression": "npm run test:web:regression && npm run test:mobile:regression",
    "auth:setup": "npx playwright test --project=setup",
    "report": "npx playwright show-report",
    "merge report": "npx playwright merge-reports --reporter html ./all-blob-reports",
    "prepare": "husky install",
    "// --- LOCAL REPORT SCRIPTS ---": "",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "allure:open": "npx allure open allure-report",
    "allure:serve": "npx allure serve allure-results",
    "allure:clear": "rm -rf allure-results allure-report && rm -rf playwright-report",
    "test:report": "npm run allure:clear && npx playwright test && npm run allure:serve"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-playwright": "^2.5.1",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npx prettier --write",
      "eslint --fix --max-warnings=0"
    ]
  }
}
